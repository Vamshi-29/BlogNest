<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverimageurl %>" width="400px" alt="Blog Cover Image">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>
    
    <div class="container mt-4">
        <img src="<%= blog.createdby.profileImageURL %>" width="100px" alt="Author's Profile Image">
        <p><%= blog.createdby.fullname %></p>
    </div>

    <!-- If user is logged in, display comment form -->
    <div class="container mt-3">
        <h1>Comments</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" id="exampleInputEmail1" name="content" placeholder="Enter content">
                    <button class="btn btn-primary" type="submit">ADD</button>
                </div>
            </form>
 
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div>
                        <% if (comment.createdby) { %>
                            <img src="<%= comment.createdby.profileImageURL %>" width="100px" alt="Author's Profile Image">
                            <p><%= comment.createdby.fullname %></p>
                        <% } else { %>
                            <p>Anonymous User</p>
                        <% } %>
                        <p><%= comment.content %></p>
                    </div>
                <% }) %>
            </div>
            
            
            
        <% } %>
    </div>

    <%- include('./partials/script') %>
</body>
</html>
